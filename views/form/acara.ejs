<!-- views/form/acara.ejs -->
<%- include('../navbar'); %>
<div class="main-panel">
  <div class="content-wrapper pb-0">
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= isEdit ? 'Edit' : 'Tambah' %> Acara</h4>
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="<%= isEdit ? `/acara/update/${event.event_id}` : '/acara/create' %>" method="POST" class="forms-sample">
              <div class="form-group">
                <label for="event_name">Nama Acara</label>
                <input type="text" class="form-control" id="event_name" name="event_name" value="<%= event ? event.event_name : '' %>" placeholder="Nama Acara" required>
              </div>
              <div class="form-group">
                <label for="event_date">Tanggal Acara</label>
                <input type="date" class="form-control" id="event_date" name="event_date" value="<%= event ? event.event_date : '' %>" required>
              </div>
              <div class="form-group">
                <label for="location">Lokasi</label>
                <input type="text" class="form-control" id="location" name="location" value="<%= event ? event.location : '' %>" placeholder="Lokasi Acara">
              </div>
              <div class="form-group">
                <label for="notes">Catatan</label>
                <textarea class="form-control" id="notes" name="notes" rows="4"><%= event ? event.notes : '' %></textarea>
              </div>
              <button type="submit" class="btn btn-primary me-2"><%= isEdit ? 'Update' : 'Submit' %></button>
              <a href="/acara" class="btn btn-light">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../footer'); %>